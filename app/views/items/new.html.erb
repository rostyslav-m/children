<h1>New item</h1>

<%= simple_form_for Item.new do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <%= f.input :age, :collection => 1..16 %>

  <p>
    <%= f.label :choose_a_gender %><br>
    <%= f.association :gender, label_method: "#{:name_gender}", as: :radio_buttons %>
  </p>

  <p>
    <%= f.label :choose_a_category %><br>
    <%= f.association :category, label_method: "#{:name_cat}", as: :radio_buttons %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<br/>
<%= link_to 'Back', items_path %>
